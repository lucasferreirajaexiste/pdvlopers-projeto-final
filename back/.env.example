#########################################
# Core server
#########################################
NODE_ENV=development
PORT=3000
APP_NAME=Mercadinho VIP

# Lista de origens do front separadas por vírgula
FRONTEND_URL=http://localhost:5173,https://balcao-two.vercel.app

#########################################
# API Keys (proteção opcional de rotas)
#########################################
API_KEYS=local-dev-api-key
API_KEY_HEADER=x-api-key
API_KEY_QUERY=api_key

#########################################
# Rate limiting
#########################################
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

#########################################
# Supabase
#########################################
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=service-role-key

#########################################
# JWT
#########################################
JWT_SECRET=super-secret-access
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=super-secret-refresh
JWT_REFRESH_EXPIRES_IN=7d

#########################################
# SMTP (recuperação de senha / campanhas)
#########################################
SEND_TEST_EMAILS=true
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp@example.com
SMTP_PASS=app-password-or-token
SMTP_FROM="Mercadinho VIP <no-reply@mercadinho.com>"

#########################################
# Swagger / utilidades
#########################################
SWAGGER_ENABLE=true
SWAGGER_SERVER_URL=https://seu-backend.vercel.app/

#########################################
# Financeiro / Fidelidade
#########################################
TRANSACTION_TYPE_DB_VALUES=entrada,saida
LOYALTY_VIP_MIN=1000
LOYALTY_GOLD_MIN=500
LOYALTY_SILVER_MIN=200
LOYALTY_INACTIVE_DAYS=90
EMAIL_BATCH_SIZE=50
EMAIL_BATCH_PAUSE_MS=0
USE_PROMO_MOCK=false
